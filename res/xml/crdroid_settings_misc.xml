    <!-- Clipboard toast info -->
    <com.crdroid.settings.preferences.SystemSettingListPreference
        android:key="clipboard_toast_info"
        android:icon="@drawable/ic_movie"
        android:title="@string/clipboard_toast_info_title"
        android:entries="@array/clipboard_toast_info_entries"
        android:entryValues="@array/clipboard_toast_info_values"
        android:defaultValue="0" />

    <!-- CPU Info -->
    <SwitchPreference
        android:key="show_cpu_info"
        android:icon="@drawable/ic_info"
        android:title="@string/show_cpu_info"
        android:summary="@string/show_cpu_info_summary" />

    <!-- Disable device identifier restrictions -->
    <com.crdroid.settings.preferences.GlobalSettingSwitchPreference
        android:key="privileged_device_identifier_check_relaxed"
